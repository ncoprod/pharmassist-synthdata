{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "pharmassist://contracts/_meta.schema.json",
  "title": "PharmAssist Contracts Meta",
  "$defs": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "non_empty_string": {
      "type": "string",
      "minLength": 1
    },
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
    },
    "iso_datetime": {
      "type": "string",
      "format": "date-time"
    },
    "iso_date": {
      "type": "string",
      "format": "date"
    },
    "language_code": {
      "type": "string",
      "enum": ["fr", "en"]
    },
    "severity": {
      "type": "string",
      "enum": ["BLOCKER", "WARN"]
    }
  }
}

